{
    "paths": [
        "lib/*.js",
        "test/*.js"
    ],
    "linterOptions": {
        "node": true,
        "onevar": false,
        "plusplus": false,
        "nomen": false,
        "forin": true,
        "regexp": false,
        "predef": [
            "assert",
            "refute",
            "buster"
        ]
    }
}
